<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pdf_bookmark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--android:layout_margin="1dp"-->

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

   android:id="@+id/cardView"

    android:background="@color/main_card_baground"

    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--android:background="@drawable/selector_recycler_single_item"-->

    <RelativeLayout
        android:background="@color/main_card_baground"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tv_icon" />

        <TextView
            android:layout_below="@+id/tv_icon"
            android:layout_margin="2dp"
            android:gravity="center"
            android:lines="2"
            android:textSize="12sp"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/tv_adapter_energy_title"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>

    <ImageView
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/imageView244" />


</RelativeLayout>