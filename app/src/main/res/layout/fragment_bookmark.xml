<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/realativeLayout_bgfilebro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recycler_view_bg_colour"
    android:orientation="vertical" 

    
    >

    <TextView
        android:gravity="center"
        android:id="@+id/tv_bookmark_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="No Bookmarks found. \n Add from list"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="gone" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout_bookmark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     
 
        <android.support.v7.widget.RecyclerView
         android:id="@+id/frag_nav_drawer_recycler_bookmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        </android.support.v7.widget.RecyclerView>
 
</android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>